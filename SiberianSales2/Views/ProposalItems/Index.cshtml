@model IEnumerable<SiberianSales2.Models.ProposalItem>

@{
    ViewData["Title"] = "Proposal Items ";
}

<h2>@ViewData["Title"]</h2>

<p>
    <a asp-action="Create" class="btn btn-default">Create New</a>
</p>
<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SalesProposal)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProposalItemQtd)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProposalItemUnitCost)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProposalItemUnitValue)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SalesProposal.Reference)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProposalItemQtd)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProposalItemUnitCost)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProposalItemUnitValue)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>
