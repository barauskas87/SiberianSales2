@model IEnumerable<SiberianSales2.Models.Supplier>

@{
    ViewData["Title"] = "Supplier Directory";
}

<h2>@ViewData["Title"]</h2>

<p>
    <a asp-action="Create" class="btn btn-default">Create New</a>
</p>
<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SupplierName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SupplierFantasyName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SupplierCnpj)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Website)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AccountManager)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AccountManagerPhone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AccountManagerEmail)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.SupplierName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SupplierFantasyName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SupplierCnpj)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Website)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AccountManager)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AccountManagerPhone)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AccountManagerEmail)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
