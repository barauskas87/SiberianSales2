@model IEnumerable<SiberianSales2.Models.Reseller>

@{
    ViewData["Title"] = "Reseller Directory";
}

<h2>@ViewData["Title"]</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ResellerName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ResellerFantasyName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ResellerCnpj)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ResellerName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ResellerFantasyName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ResellerCnpj)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
